#:import FadeTransition kivy.uix.screenmanager.FadeTransition

MyScreenManager:
    transition: FadeTransition()
    FirstScreen:
    SecondScreen:
    FinishScreen:



<FirstScreen>:
    name: 'home'
    canvas.before:
        Color:
            rgba: 0, 153/255, 51/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 3
        Image:
            center: root.center_x, root.center_y
            source: 'cartas/zzz_honors_spade-14.png'
            size_hint: 0.7, 0.4
            allow_stretch: True
        Label:
            text: 'Anarqu√≠a'
            size_hint: 1., .2
            font_size: 90
        Button:
            text: 'Play!!'
            center: root.center_x, root.center_y
            size_hint: 0.1, 0.05
            on_release: app.root.current = 'game'

<FinishScreen>:
    name: 'finish'
    canvas.before:
        Color:
            rgba: 0, 153/255, 51/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        name:'all'
        rows: 1
        Label:
            name: "player1"
            text: "Player 1's score: "
        Label:
            name: "player2"
            text: "Player 2's score: "
        Label:
            name: "player3"
            text: "Player 3's score: "
        Label:
            name: "player4"
            text: "Player 4's score: "
        Label:
            name: "player5"
            text: "Player 5's score: "

<SecondScreen>:
    canvas.before:
        Color:
            rgba: 0, 153/255, 51/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    name: 'game'

    GridLayout:
        pos: 0 * self.size[0], 0.8 * self.size[1]
        cols: 4
        name: 'players'
        RelativeLayout:
            name: 'player2'
            Label:
                name: 'name'
                text: 'Player 2'
                pos_hint: {'center_x': 0.5, 'center_y': 0}
            BoxLayout:
                padding: [5, 5, 5, 5]
                size_hint: 1, .4
                pos_hint: {'center_y': .325}
                pos: 0, 0
                name: 'cards'
            BoxLayout:
                padding: [5, 5, 5, 5]
                size_hint: 1, .4
                pos_hint: {'center_y': .28}
                name: 'won_cards'
        RelativeLayout:
            name: 'player3'
            Label:
                name: 'name'
                text: 'Player 3'
                pos_hint: {'center_x': 0.5, 'center_y': 0}
            BoxLayout:
                padding: [5, 5, 5, 5]
                pos_hint: {'center_y': .325}
                size_hint: 1, .4
                name: 'cards'
            BoxLayout:
                padding: [5, 5, 5, 5]
                size_hint: 1, .4
                pos_hint: {'center_y': .28}
                name: 'won_cards'
        RelativeLayout:
            name: 'player4'
            Label:
                name: 'name'
                text: 'Player 4'
                pos_hint: {'center_x': 0.5, 'center_y': 0}
            BoxLayout:
                padding: [5, 5, 5, 5]
                pos_hint: {'center_y': .325}
                size_hint: 1, .4
                name: 'cards'
            BoxLayout:
                padding: [5, 5, 5, 5]
                size_hint: 1, .4
                pos_hint: {'center_y': .28}
                name: 'won_cards'
        RelativeLayout:
            name: 'player5'
            Label:
                name: 'name'
                text: 'Player 5'
                pos_hint: {'center_x': 0.5, 'center_y': 0}
            BoxLayout:
                padding: [5, 5, 5, 5]
                pos_hint: {'center_y': .325}
                size_hint: 1, .4
                name: 'cards'
            BoxLayout:
                padding: [5, 5, 5, 5]
                size_hint: 1, .4
                pos_hint: {'center_y': .28}
                name: 'won_cards'


    FloatLayout:
        name: 'board'
        #las cartas que se generan al darle a comenzar


    GridLayout:
        size_hint: [1, 0.4]
        pos_hint: {'center_y': .25}
        cols: 1
        name: 'player1'
        GridLayout:
            cols: 6
            size_hint: [1, 0.15]
            name: 'buttons'
        GridLayout:
            cols: 50
            size_hint: [1, 0.425]
            name: 'won_cards'
        GridLayout:
            cols: 10
            size_hint: [1, 0.425]
            name: 'cards'

    BoxLayout:
        name: 'buttons'
        Button:
            name: 'start_btn'
            text: 'Start'
            center: root.center_x, root.center_y
            size_hint: 0.1, 0.05
            on_release: root.begin()
        Button:
            name: 'back_btn'
            text: 'back'
            center: root.center_x, root.center_y
            size_hint: 0.1, 0.05
            on_release: app.root.current = 'home'

    FloatLayout:
        name: 'finish'
        center: root.center_x, root.center_y
        size: root.size[0] * 0.7, root.size[1] * 0.5
        BoxLayout:
            name: 'scores'
<Card>:
    name: root.name
    source: root.src
    size_hint: (0.1, 0.2)
    allow_stretch: True
    pos_hint: {'center_x': 0.95, 'center_y': 0.5}
